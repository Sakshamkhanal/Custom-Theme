<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <record id="website.homepage" model="ir.ui.view">
        <field name="active" eval="False"/>
    </record>
    <record id="page_home" model="website.page">
        <field name="name">Home</field>
        <field name="is_published" eval="True"/>
        <field name="key">website_airproof.page_home</field>
        <field name="url">/</field>
        <field name="type">qweb</field>
        <field name="arch" type="xml">
            <t t-name="website_airproof.page_home">
                <t t-call="website.layout">
                    <t t-set="additional_title">
                        One Step beyond the horizon | Airproof
                    </t>
                    <div id="wrap" class="oe_structure">
                        <section class="s_airproof_carousel s_carousel_wrapper" data-snippet="s_sirproof_carousel" data-name="Carousel custom">
                            <div class="container text-center">
                            <h2 class="mb-4">Why Choose Airproof?</h2>
                                <div class="row">
                                    <div class="col-md-3">
                                        <i class="fa fa-shield fa-2x text-primary mb-2"></i>
                                        <h5>Durability</h5>
                                    </div>
                                    <div class="col-md-3">
                                        <i class="fa fa-battery fa-2x text-primary mb-2"></i>
                                        <h5>Extended battery</h5>
                                    </div>
                                    <div class="col-md-3">
                                        <i class="fa fa-cube fa-2x text-primary mb-2"></i>
                                        <h5>Modular design</h5>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                </t>
            </t>
        </field>
    </record>
</odoo>
